[flake8]
max-line-length = 100
extend-ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    E501   # line too long (handled by black)

exclude = 
    .git,
    __pycache__,
    build,
    dist,
    .eggs,
    *.egg-info,
    .pytest_cache,
    .coverage,
    htmlcov,
    venv,
    .venv,
    .tox,
    .mypy_cache,
    _debug,
    node_modules,
    migrations

max-complexity = 15
count = True
statistics = True
show-source = True

per-file-ignores =
    __init__.py:F401
    tests/*.py:S101,S106,E402,F401
    test_*.py:E402,F401